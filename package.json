{
  "name": "sistema-doacoes-fullstack",
  "version": "1.0.0",
  "description": "Sistema completo de doações com backend em Node.js e frontend em React",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "build": "npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:deploy": "node build-for-deploy.js",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "start": "cd backend && npm start",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules package-lock.json",
    "clean:frontend": "cd frontend && rm -rf node_modules package-lock.json",
    "migrate": "cd backend && npm run migrate",
    "migrate:undo": "cd backend && npm run migrate:undo",
    "seed": "cd backend && npm run seed",
    "db:reset": "cd backend && npm run db:reset",
    "postinstall": "npm run install:all && npm run build:frontend",
    "generate:jwt": "node -e \"console.log(require('crypto').randomBytes(64).toString('hex'))\""
  },
  "keywords": [
    "donation",
    "fullstack",
    "nodejs",
    "react",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sistema-doacoes-fullstack.git"
  }
}